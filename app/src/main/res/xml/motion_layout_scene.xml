<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/combined_transition"
        app:constraintSetStart="@id/all_expanded_started_set"
        app:constraintSetEnd="@id/catalog_only_set">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/rv_catalog"
            app:touchAnchorSide="top"
            app:onTouchUp="autoComplete"/>

        <KeyFrameSet>

            <KeyPosition
                app:framePosition="50"
                app:motionTarget="@id/stories"
                app:percentX="1"
                app:percentY="1"/>

            <KeyPosition
                app:framePosition="50"
                app:motionTarget="@id/toolbar"
                app:percentX="0"
                app:percentY="0"/>

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/all_expanded_started_set">

        <Constraint android:id="@id/toolbar">

            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </Constraint>

        <Constraint android:id="@id/stories">

            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"/>

        </Constraint>

        <Constraint android:id="@id/search">

            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stories"/>

        </Constraint>

        <Constraint android:id="@id/rv_catalog">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/search"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/without_stories_set"
        app:deriveConstraintsFrom="@id/all_expanded_started_set">

        <Constraint android:id="@id/stories">

            <Layout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/toolbar" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/catalog_only_set"
        app:deriveConstraintsFrom="@id/without_stories_set">

        <Constraint android:id="@id/toolbar">

            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/search"/>
        </Constraint>


        <Constraint android:id="@id/search">

            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="parent"/>

        </Constraint>

    </ConstraintSet>

</MotionScene>